{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "nimaadocker/react-complex-app-client",
            "hostname": "client",
            "essential": false, 
            "memory": 128 
        },
        {
            "name": "server",
            "image": "nimaadocker/react-complex-app-server",
            "hostname": "api",
            "essential": false,
            "memory": 128
        },
        {
            "name": "worker",
            "image": "nimaadocker/react-complex-app-worker",
            "hostname": "worker",
            "essential": false,
            "memory": 128
        },
        {
            "name": "nginx",
            "image": "nimaadocker/react-complex-app-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMapping": [
               {
                "hostPort": 80,
                "containerPort": 80
               }
            ],
            "links": ["client", "server"],
            "memory": 128
        }
    ]
}
